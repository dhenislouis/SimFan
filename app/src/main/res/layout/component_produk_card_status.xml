<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/status_yellow_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Ikon jam / refresh -->
    <ImageView
        android:id="@+id/imgStatusIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/status_icon"
        android:src="@drawable/ic_refresh"
        app:tint="@color/secondary" />

    <!-- Teks status -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtStatusLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum dapat menerima transaksi."
            android:textColor="@color/secondary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtStatusLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Data sedang diperbarui"
            android:textColor="@color/secondary"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Ikon more -->
    <ImageView
        android:id="@+id/imgMore"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="@string/more_options"
        android:src="@drawable/ic_more_horizontal"
        app:tint="@color/secondary" />
</LinearLayout>
