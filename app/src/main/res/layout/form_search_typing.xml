<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Search_Typing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@color/text_primary">

    <!-- 1️⃣ Form Search Default -->
    <androidx.cardview.widget.CardView
        android:id="@+id/SearchTypingDefault"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="2dp"
        app:strokeColor="@color/primary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_search"
                android:contentDescription="Search Icon" />

            <EditText
                android:id="@+id/editTextTyping"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Type something"
                android:background="@android:color/transparent"
                android:paddingStart="48dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textColorHint="#888888" />
            <ImageView
                android:id="@+id/iconCloseTyping"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_close"
                android:contentDescription="Close Icon" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- 2️⃣ Form Search With Icon -->
    <androidx.cardview.widget.CardView
        android:id="@+id/SearchTypinglWithIcon"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="2dp"
        app:strokeColor="@color/primary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_search"
                android:contentDescription="Search Icon" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Type something"
                android:background="@android:color/transparent"
                android:paddingStart="48dp"
                android:paddingEnd="96dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textColorHint="#888888" />

            <ImageView
                android:id="@+id/iconClearWithIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="60dp"
                android:src="@drawable/ic_clear"
                android:contentDescription="Clear Icon" />

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:background="#E0E0E0" />

            <ImageView
                android:id="@+id/iconUserTyping"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_user"
                android:contentDescription="User Icon" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
