<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerForms"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@color/text_primary">

    <!-- 1️⃣ Form Success -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Label name"
        android:textColor="#888888"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white">

        <EditText
            android:id="@+id/editTextSuccess"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:hint="Type something"
            android:background="@android:color/transparent"
            android:paddingHorizontal="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textColorHint="#888888" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Successful"
        android:textColor="@color/surface_success_primary"
        android:textSize="12sp"
        android:maxLines="2"
        android:layout_marginBottom="16dp" />

    <!-- 2️⃣ Form Success with Icon -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Label name"
        android:textColor="#888888"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editTextSuccessWithIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Type something"
                android:background="@android:color/transparent"
                android:paddingStart="16dp"
                android:paddingEnd="48dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textColorHint="#888888" />

            <ImageView
                android:id="@+id/iconSuccessEye"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_eye"
                android:contentDescription="Eye Icon" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input valid"
        android:textColor="@color/surface_success_primary"
        android:textSize="12sp"
        android:maxLines="2"
        android:layout_marginBottom="16dp" />

    <!-- 3️⃣ Form Success Disabled -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Label name"
        android:textColor="#888888"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white">

        <EditText
            android:id="@+id/editTextSuccessDisabled"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:hint="Type something"
            android:enabled="false"
            android:background="@android:color/transparent"
            android:paddingHorizontal="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All good here"
        android:textColor="@color/surface_success_primary"
        android:textSize="12sp"
        android:maxLines="2" />

</LinearLayout>
