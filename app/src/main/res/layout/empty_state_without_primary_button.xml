<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:background="@color/bg_primary">

        <!-- ðŸ“· Placeholder Image -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardImagePlaceholder"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/custom">

            <ImageView
                android:id="@+id/imagePlaceholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:background="@drawable/ic_placeholder"
                android:contentDescription="Empty state image"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

        <!-- ðŸ’¬ Message -->
        <TextView
            android:id="@+id/textMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maximum 2 text lines."
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:maxLines="2" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
