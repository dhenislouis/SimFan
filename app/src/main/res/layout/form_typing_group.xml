<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerForms"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@color/text_primary">

    <!-- 1️⃣ Form Typing -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeWidth="2dp"
        app:strokeColor="@color/primary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextTyping"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Type something"
                android:background="@android:color/transparent"
                android:paddingStart="16dp"
                android:paddingEnd="48dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textColorHint="#888888" />

            <ImageView
                android:id="@+id/iconClearTyping"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_clear"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- 2️⃣ Form Typing with Eye Icon -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeWidth="2dp"
        app:strokeColor="@color/primary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextTypingWithIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Type something"
                android:background="@android:color/transparent"
                android:paddingStart="16dp"
                android:paddingEnd="96dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textColorHint="#888888" />

            <ImageView
                android:id="@+id/iconClearTypingWithIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="48dp"
                android:src="@drawable/ic_clear"
                android:contentDescription="Clear Icon" />

            <View
                android:id="@+id/separatorTyping"
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="44dp"
                android:background="#E0E0E0" />

            <ImageView
                android:id="@+id/iconEyeTyping"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_eye"
                android:contentDescription="Eye Icon" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- 3️⃣ Form Typing OFF Label -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeWidth="2dp"
        app:strokeColor="@color/primary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextTypingOffLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Type something"
                android:background="@android:color/transparent"
                android:paddingStart="16dp"
                android:paddingEnd="48dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textColorHint="#888888" />

            <ImageView
                android:id="@+id/iconClearTypingOffLabel"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_clear"
                android:contentDescription="Clear Icon"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
