<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_gradient_deposito_header">

        <!-- Total Deposito Aktif -->
        <TextView
            android:id="@+id/textTotalDeposito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total deposito Aktif"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/valueTotalDeposito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp1.509.000"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="4dp" />

        <!-- Bunga saat ini -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_deposito_rate_box"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bunga saat ini"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/gray" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/valueBunga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â†‘ Rp.250.000"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
